#  Absolute value of a double
# IEEE 754 compliant

[require]
GLSL >= 1.30

[vertex shader]
#version 130
void main()
{
   gl_Position = gl_Vertex;
}

[fragment shader]
#version 130
void main()
{
   gl_FragColor = gl_Color;
}

[test]

#################################################
#
# Absolute value of a Float64
#
#################################################

uvec2 abs( in uvec2 a )
{
   a.x &= 0x7FFFFFFF;
   return a;
}
